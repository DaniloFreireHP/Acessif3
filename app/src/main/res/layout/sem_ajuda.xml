<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/button15"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:background="#2572E8"
        android:text="Assistência estudantil"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="359dp"
        tools:layout_editor_absoluteY="207dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="162dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#2572E8"
        android:backgroundTint="#2572E8"
        android:text="Outros campi"
        android:textColor="#14305b"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="7dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:background="#2572E8"
        android:text="Biblioteca"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button15" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="289dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:text="Escolha uma das opções:"
        android:textAlignment="viewStart"
        android:textColor="#09205D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:background="#2572E8"
        android:lineSpacingExtra="18sp"
        android:text="Cursos"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button13" />

    <Button
        android:id="@+id/button16"
        style="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2572E8"
        android:text="Voltar"
        tools:layout_editor_absoluteY="219dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:text="Você está no campus"
        android:textAlignment="center"
        android:textColor="#3929FF"
        tools:layout_editor_absoluteX="7dp"
        tools:text="Para informações sobre outros campi clique no botão"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button16" />

</android.support.constraint.ConstraintLayout>