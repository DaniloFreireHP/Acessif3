<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.org.com.acessif.MainActivity">

    <Button
        android:id="@+id/buttonTelaVisual"
        android:layout_width="265dp"
        android:layout_height="128dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/background_dark"
        android:onClick="telaVisual"
        android:text="VISUAL"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonAtencao"
        app:layout_constraintTop_toBottomOf="@+id/buttonAuditiva"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonAuditiva"
        android:layout_width="264dp"
        android:layout_height="129dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="#4C9F71"
        android:onClick="telaAuditiva"
        android:text="Auditiva"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonSemDeficiencia]"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAtencao"
        android:layout_width="275dp"
        android:layout_height="127dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="#4C9F71"
        android:onClick="telaAtencao"
        android:text="DÉFICT DE ATENÇÃO"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSemDeficiencia"
        android:layout_width="276dp"
        android:layout_height="130dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#4C9F71"
        android:onClick="telaSemAjuda"
        android:text="SEM DEFICIÊNCIA"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAtencao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
